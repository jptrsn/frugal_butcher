{
    "name": "Frugal Butcher",
    "description": "Adds keyboard shortcuts to Google Meet",
    "version": "0.0.0",
    "manifest_version": 3,
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content.js",
                "meet-actions.js"
            ],
            "matches": [
                "https://meet.google.com/*"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "commands": {
        "firstEvent": {
          "suggested_key": {
            "default": "Ctrl+Shift+PageUp",
            "mac": "Command+Shift+PageUp"
          },
          "description": "Auto-join the next meet in your calendar",
          "global": true
        },
        "instantMeet": {
          "suggested_key": {
            "default": "Ctrl+Shift+PageDown",
            "mac": "Command+Shift+PageDown"
          },
          "description": "Start an instant meet"
        },
        "muteAudio": {
          "description": "Mute the audio"
        },
        "muteVideo": {
          "description": "Mute the video"
        },
        "shareScreen": {
          "suggested_key": {
            "default": "Ctrl+Shift+Home"
          },
          "description": "Share screen 1"
        }
      }
}