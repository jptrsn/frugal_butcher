{
    "name": "Frugal Butcher",
    "description": "Adds keyboard shortcuts to Google Meet",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": { 
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png" 
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content.js",
                "meet-actions.js"
            ],
            "matches": [
                "https://meet.google.com/*"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "commands": {
        "firstEvent": {
          "suggested_key": {
            "default": "Alt+Shift+F",
            "mac": "Alt+Shift+F"
          },
          "description": "Auto-join the next meet in your calendar",
          "global": true
        },
        "activateMeet": {
          "description": "Activate the meet tab (bring to foreground)",
          "suggested_key": {
            "default": "Alt+Shift+A",
            "mac": "Alt+Shift+A"
          },
          "global": true
        },
        "instantMeet": {
          "description": "Start an instant meet"
        },
        "muteAudio": {
          "description": "Mute the audio",
          "suggested_key": {
            "default": "Alt+Shift+M",
            "mac": "Alt+Shift+M"
          },
          "global": true
        },
        "muteVideo": {
          "description": "Mute the video",
          "suggested_key": {
            "default": "Alt+Shift+V",
            "mac": "Alt+Shift+V"
          },
          "global": true
        }
      }
}